<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/machine.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (machines.length > 0) { %>
        <div class="grid">
            <% for (let machine of machines) { %>
            <article class="card machine_item">
                <header class="card__header">
                    <h1 class="machine_name"><%= machine.name %></h1>
                </header>
                <div class="card__image grid">
                    <% let months = [
                                "StyczeÅ„", "Luty", "Marzec", "04"
                            ];
                             %>
                    <p class="machine_name">
                        <%= machine.inspectionDate.getDate() %> -
                        <%= months[machine.inspectionDate.getMonth()] %> -
                        <%= machine.inspectionDate.getFullYear() %>
                    </p>
                    <p class="machine_name">test</p>
                </div>
                <div class="card__content">
                    <h2 class="machine_price">$<%= machine.price %></h2>
                    <p class="machine_description"><%= machine.description %></p>
                </div>
                <div class="card__actions">
                    <form action="/control" method="POST">
                        <input type="hidden" name="productId" value="<%= machine.id %>">
                        <button class="btn" type="submit">Inspekcja</button>
                    </form>
                    <form action="/history" method="POST">
                        <input type="hidden" name="productId" value="<%= machine.id %>">
                        <button class="btn" type="submit">Historia</button>
                    </form>
                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>