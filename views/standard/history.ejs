<%- include('../../includes/head') %>
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../../includes/navigation') %>
    <main>
        <div class="generalContainer">
            <div class="tableContainer">
                <table class="customTable history">
                    <tr>
                        <th>
                            Rodzaj obs≈Çugi
                        </th>
                        <th>
                            Data rejestracji
                        </th>
                        <th>
                            Zarejestrowana przez
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                    <% for(let a = 0; a < handlings.length; a++) { %>
                        <tr class="historyRow <% if(a == handlings.length - 1){ %> end <% } %>">
                            <td>
                                <a href="/historyHandling/<%= machineName %>/<%= handlings[a].id %>/<%= handlings[a].userName %>" class="historyLink"><%= handlingsTypesNames[a] %></a> 
                            </td>
                            <td>
                                <a href="/historyHandling/<%= machineName %>/<%= handlings[a].id %>/<%= handlings[a].userName %>" class="historyLink"><%= handlings[a].date %></a> 
                            </td>
                            <td>
                                <a href="/historyHandling/<%= machineName %>/<%= handlings[a].id %>/<%= handlings[a].userName %>" class="historyLink"><%= handlings[a].userName %></a> 
                            </td>
                            <td>
                                <a href="/historyHandling/<%= machineName %>/<%= handlings[a].id %>/<%= handlings[a].userName %>" class="historyLink"><span class="<%= handlingsStatuses[a] === 'OK' ? 'OK' : 'NOK' %>"><%= handlingsStatuses[a] %></span></a> 
                            </td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </main>
<%- include('../../includes/end') %>